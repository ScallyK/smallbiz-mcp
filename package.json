{
  "name": "smallbiz-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for small business operations (calendar, CRM, sales, marketing)",
  "private": true,
  "type": "module",
  "bin": {
    "smallbiz-mcp-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "dev": "npx nodemon --watch src --ext ts --exec \"node --loader ts-node/esm src/index.ts\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "@prisma/client": "^6.14.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "nodemon": "^3.1.10",
    "prisma": "^6.14.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
